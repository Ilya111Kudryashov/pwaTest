    "related_applications": [
        {
            "platform": "webapp",
            "url": "https://your-domain.com/manifest.json"
        }
    ],
    
    "prefer_related_applications": false,
    
    "scope": "/",
    
    "launch_handler": {
        "client_mode": ["auto", "focus-existing", "navigate-existing"]
    },
    
    "edge_side_panel": {
        "preferred_width": 360
    },
    
    "handle_links": "preferred",
    
    "protocol_handlers": [
        {
            "protocol": "web+pwacrm",
            "url": "/?protocol=%s"
        }
    ],
    
    "share_target": {
        "action": "/share-target.html",
        "method": "POST",
        "enctype": "multipart/form-data",
        "params": {
            "title": "title",
            "text": "text",
            "url": "url",
            "files": [
                {
                    "name": "files",
                    "accept": ["image/*", "application/pdf", "text/plain"]
                }
            ]
        }
    },
    
    "file_handlers": [
        {
            "action": "/file-handler.html",
            "accept": {
                "application/pdf": [".pdf"],
                "image/*": [".jpg", ".jpeg", ".png", ".gif", ".webp"],
                "text/plain": [".txt"]
            }
        }
    ],
    
    "capture_links": "new-client",
    
    "permissions": [
        "clipboard-write",
        "clipboard-read",
        "notifications",
        "geolocation"
    ],
    
    "id": "/",
    
    "iarc_rating_id": "e84b072d-71b3-4d3e-86ae-31a8ce4e53b7",
    
    "features": [
        "Cross Platform",
        "fast",
        "simple",
        "secure"
    ],
    
    "splash_pages": null
}